# Environment Configuration for Snøfokk Analyse
# Copy this file to .env and fill in your actual values

# Frost API Configuration (Norwegian Met Office)
FROST_CLIENT_ID=your-frost-api-client-id-here
WEATHER_STATION=SN46220
FROST_CACHE_MAX_AGE_HOURS=12

# Vintervakt Maintenance API (brøyting/strøing/skraping)
MAINTENANCE_API_BASE_URL=https://fjellbs-app-ny.web.app
MAINTENANCE_API_TOKEN=your-maintenance-api-token-here

# Email Configuration for Reports
EMAIL_FROM=noreply@yourdomain.com
EMAIL_TO=your-email@yourdomain.com
SMTP_SERVER=smtp.gmail.com
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# Application Settings
DEBUG=false
DATA_DIR=data
LOGS_DIR=logs

# Analysis Parameters (optional - will use defaults if not set)
SNOW_CHANGE_THRESHOLD=0.5
TEMPERATURE_SNOW_THRESHOLD=2.0
WIND_IMPACT_THRESHOLD=8.0
ROLLING_WINDOW=3

# Timezone
TIMEZONE=Europe/Oslo
